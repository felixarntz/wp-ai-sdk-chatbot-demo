{
	"name": "felixarntz/wp-ai-sdk-chatbot-demo",
	"description": "Implements a basic AI chatbot demo using the PHP AI Client SDK.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"wordpress",
		"plugin",
		"ai",
		"chatbot"
	],
	"homepage": "https://github.com/felixarntz/wp-ai-sdk-chatbot-demo/",
	"repositories": [
		{
			"type": "path",
			"url": "/Users/jameslepage/Projects/php-ai-client",
			"options": {
				"symlink": true
			}
		},
		{
			"type": "vcs",
			"url": "https://github.com/WordPress/mcp-adapter.git"
		}
	],
	"require": {
		"automattic/jetpack-autoloader": "^5.0",
		"composer/installers": "~1.0",
		"guzzlehttp/guzzle": "^7.10",
		"wordpress/abilities-api": "^0.1",
		"wordpress/php-ai-client": "dev-fix/empty-tool-calls-parameters",
		"wordpress/mcp-adapter": "dev-feature/mcp-client-core",
		"php": ">=8.1"
	},
	"config": {
		"platform": {
			"php": "8.1.0"
		},
		"allow-plugins": {
			"composer/installers": true,
			"php-http/discovery": true,
			"automattic/jetpack-autoloader": true
		}
	},
	"autoload": {
		"psr-4": {
			"Felix_Arntz\\WP_AI_SDK_Chatbot_Demo\\": "includes/"
		}
	},
	"scripts": {
		"format": [
			"composer --working-dir=tools/php/lint update",
			"tools/php/lint/vendor/bin/phpcbf --standard=phpcs.xml.dist"
		],
		"lint": [
			"composer --working-dir=tools/php/lint update",
			"tools/php/lint/vendor/bin/phpcs --standard=phpcs.xml.dist"
		],
		"phpstan": [
			"composer --working-dir=tools/php/lint update",
			"tools/php/lint/vendor/bin/phpstan analyse --memory-limit=2048M"
		]
	}
}
